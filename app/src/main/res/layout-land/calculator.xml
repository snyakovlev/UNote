<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/plusic2" />

        <ImageButton
            android:id="@+id/minus"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/minus" />

        <ImageButton
            android:id="@+id/umnog"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/umnog" />

        <ImageButton
            android:id="@+id/razdel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/ic_razdel" />

        <ImageButton
            android:id="@+id/ravno"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/ravno" />

        <ImageButton
            android:id="@+id/vstavka"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:src="@drawable/vstavka" />

        <ImageButton
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:elevation="0dp"
            android:src="@drawable/backsp" />

    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="8dp"><![CDATA[

        />

            ]]>

        <LinearLayout
            android:id="@+id/telo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:addStatesFromChildren="true"
            android:orientation="horizontal"></LinearLayout>

            <ImageView

                android:id="@+id/ravno2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ravno"
                android:visibility="invisible" />

            <TextView

                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/colorPrimaryDarkGreen"
                android:textSize="18sp" />/>

        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>