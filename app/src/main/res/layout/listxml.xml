<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout

        android:id="@+id/pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/colorPrimaryDarkRed"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/ppanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1px"
            android:background="@color/colorPrimaryRed"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/ll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/glav_panel"
                android:layout_centerInParent="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="false"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/infdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="false"
                        android:layout_centerInParent="false"
                        android:layout_marginRight="8dp"
                        android:textSize="10sp" />

                    <CheckBox

                        android:id="@+id/cbox"
                        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentRight="true"
                        android:checked="false"
                        android:fitsSystemWindows="false"
                        android:focusableInTouchMode="false"
                        android:visibility="gone" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/glav_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                        <LinearLayout
                            android:id="@+id/list_panel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">


                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/openList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:text="@string/ll1"
                        android:textColor="@color/colorPrimaryDarkBlue" />/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/photo_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">


                    <ImageView

                        android:id="@+id/photo1_panel"
                        android:layout_width="wrap_content"
                        android:layout_height="148dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/darker_gray"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera" />


                </LinearLayout>
                >


                <LinearLayout
                    android:id="@+id/image_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/image1_panel"
                        android:layout_width="wrap_content"
                        android:layout_height="148dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/darker_gray"
                        android:scaleType="fitCenter"
                        android:src="@drawable/paint" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/audio_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">


                    <SeekBar
                        android:id="@+id/sb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/audio_record"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="8dp"
                            android:background="@color/transporent"
                            android:scaleType="fitXY"
                            android:src="@drawable/mic2" />

                        <ImageButton
                            android:id="@+id/audio_play"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@color/transporent"
                            android:scaleType="fitXY"
                            android:src="@drawable/play2" />


                        <ImageButton
                            android:id="@+id/share_audio"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@color/transporent"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_share2" />

                    </LinearLayout>

                </LinearLayout>


                >


                <LinearLayout
                    android:id="@+id/text_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="4dp"
                            android:autoLink="all"
                            android:linksClickable="true"
                            android:padding="2dp"
                            android:scaleType="center" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/table_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/topent"
                            android:fillViewport="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <WebView
                                    android:id="@+id/table"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_sync_black_24dp">

                                </WebView>
                            </LinearLayout>
                        </ScrollView>

                        <TextView
                            android:id="@+id/topent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center_horizontal"
                            android:text="@string/ll2"
                            android:textColor="@color/colorPrimaryDarkBlue" />


                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>